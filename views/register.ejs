 <% layout('layout') %>

<div class="register_wrapper">
    <p class="main-title"><%= title %></p>
    <form action="/register" method="post" class="">
        <span class="label">ユーザー名</span><input type="text" name="user_name" class="" required><br>
        <br>
        <span class="label">Eメール</span><input type="email" name="email" class="" required><br>
        <br>
        <span class="label">パスワード</span><input type="password" name="password" class="" required><br>
        <br>
        <button type="submit" class="">新規会員登録</button>
    </form>
    <% if (typeof emailExists !== 'undefined') { %>
        <p class="error"><%= emailExists %></p>
    <% } %>
    
</div>
